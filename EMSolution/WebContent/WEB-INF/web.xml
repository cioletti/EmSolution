<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>EMSolution</display-name>

	<context-param>
		<param-name>flex.class.path</param-name>
		<param-value>/WEB-INF/flex/hotfixes,/WEB-INF/flex/jars</param-value>
	</context-param>

	<!-- Http Flex Session attribute and binding listener support -->
	<listener>
		<listener-class>flex.messaging.HttpFlexSession</listener-class>
	</listener>
	<listener>
		<listener-class>com.emsolution.util.JobImportarConsultor</listener-class>
	</listener>
	<listener>
		<listener-class>com.emsolution.read.StartReadBufferPL</listener-class>
	</listener>
	<listener>
		<listener-class>com.emsolution.readcombustivel.StartCombReadBufferPL</listener-class>
	</listener>
	<listener>
		<listener-class>com.emsolution.readeid.StartEidReadBuffer</listener-class>
	</listener>
	<!--listener>
		<listener-class>com.emsolution.util.ListenerEmSolution</listener-class>
	</listener>
	<listener>
		<listener-class>com.emsolution.alerta.StartAlertaReadBufferPL</listener-class>
	</listener-->
	<session-config><session-timeout>60</session-timeout></session-config>
	<!-- MessageBroker Servlet -->
	<servlet>
		<servlet-name>MessageBrokerServlet</servlet-name>
		<servlet-class>flex.messaging.MessageBrokerServlet</servlet-class>
		<init-param>
			<param-name>services.configuration.file</param-name>
			<param-value>/WEB-INF/flex/services-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>flex.write.path</param-name>
			<param-value>/WEB-INF/flex</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>LoginUsuario</display-name>
		<servlet-name>LoginUsuario</servlet-name>
		<servlet-class>com.emsolution.controller.LoginUsuario</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ImprimirProposta</display-name>
		<servlet-name>ImprimirProposta</servlet-name>
		<servlet-class>com.emsolution.controller.ImprimirProposta</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>RelatorioSos</display-name>
		<servlet-name>RelatorioSos</servlet-name>
		<servlet-class>com.emsolution.controller.RelatorioSos</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ImprimirRecomendacao</display-name>
		<servlet-name>ImprimirRecomendacao</servlet-name>
		<servlet-class>com.emsolution.controller.ImprimirRecomendacao</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>RelatorioSosArrefecimento</display-name>
		<servlet-name>RelatorioSosArrefecimento</servlet-name>
		<servlet-class>com.emsolution.controller.RelatorioSosArrefecimento</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MessageBrokerServlet</servlet-name>
		<url-pattern>/messagebroker/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginUsuario</servlet-name>
		<url-pattern>/LoginUsuario</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ImprimirProposta</servlet-name>
		<url-pattern>/ImprimirProposta</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RelatorioSos</servlet-name>
		<url-pattern>/RelatorioSos</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ImprimirRecomendacao</servlet-name>
		<url-pattern>/ImprimirRecomendacao</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RelatorioSosArrefecimento</servlet-name>
		<url-pattern>/RelatorioSosArrefecimento</url-pattern>
	</servlet-mapping>
		<welcome-file-list>
		<welcome-file>EMSolution.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

